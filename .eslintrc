extends:
  airbnb

parser:
  babel-eslint

plugins:
  - html

env:
  es6: true
  node: true
  mocha: true
  browser: true

parserOptions:
  sourceType: module

rules:
  quotes:
    - error
    - single
    - avoid-escape
  semi:
    - error
    - never
  no-empty:
    - error
    - allowEmptyCatch: true
  no-use-before-define:
    - error
    - nofunc
  one-var:
    - off
  eqeqeq:
    - warn
    - smart
  no-unused-vars:
    - warn
  no-param-reassign:
    - warn
  no-cond-assign:
    - error
    - except-parens
  arrow-parens:
    - error
    - as-needed
  no-underscore-dangle:
    - off
  class-methods-use-this:
    - off
  arrow-body-style:
    - off
  padded-blocks:
    - off
  global-require:
    - off
  no-restricted-syntax:
    - error
    - WithStatement
  object-curly-spacing:
    - off
  import/prefer-default-export:
    - off
  import/newline-after-import:
    - off
